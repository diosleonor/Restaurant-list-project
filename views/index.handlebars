<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search">
        <div class="input-group mb-3" style="display: flex;">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value='{{keyword}}' aria-describedby="search-button">
          <div class="input-group-append  mr-3">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
          <select class="custom-select" id="sort" name='sort' onchange=";this.form.submit();">
            {{#if sortInput}}
            <option value="{{sortInput}}" selected>{{sortInput}}</option>
            <option value="not-change" >排序</option>
            <option value="name_asc" {{#is sortInput "A > Z"}} selected {{/is}}>A > Z</option>
            <option value="name_desc" {{#is sortInput "Z > A"}} selected {{/is}}>Z > A</option>
            <option value="category" {{#is sortInput "Z > A"}} selected {{/is}}>類別</option>
            <option value="rating_desc">評分</option>
            <option value="location">地區</option>
            {{else}}
            <option value="not-change">排序</option>
            <option value="name_asc">A > Z</option>
            <option value="name_desc">Z > A</option>
            <option value="category">類別</option>
            <option value="rating_desc">評分</option>
            <option value="location">地區</option>
            {{/if}}
          </select>
        </div>

        <div class="col-4 m-auto">
          <a href="./restaurants/new"><button type="button" class="btn btn-info btn-lg">新增餐廳</button></a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
      {{#each restaurants}}
        <a href="restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" onerror="this.src='https://blog.thomasnet.com/hs-fs/hubfs/shutterstock_774749455.jpg?width=1200&name=shutterstock_774749455.jpg'">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                <span class="badge badge-pill badge-success font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              </div>

              <a href="/restaurants/{{ this._id }}">
              <span class="badge badge-pill badge-info font-weight-normal">
                detail
              </span>
              </a>

              <a href="/restaurants/{{ this._id }}/edit">
              <span class="badge badge-pill badge-warning font-weight-normal">
                 edit 
              </span>
              </a>

              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="badge badge-pill badge-danger font-weight-normal">X</button>
              </form>
            </div>
          </div>
        </a>
      {{/each}}

      </div>
    </div>
  </div>
</div>
